<UserControl x:Class="QvrProClient.WpfTester.Views.CamerasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <DockPanel Margin="8">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <Button Content="Load Cameras" Command="{Binding LoadCamerasCommand}" Width="140" />
        </StackPanel>
        <DataGrid ItemsSource="{Binding Cameras}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Camera Id" Binding="{Binding CameraId}" Width="2*" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="Channel Id" Binding="{Binding ChannelId}" Width="*" />
                <DataGridTextColumn Header="IP / URL" Binding="{Binding IpOrUrl}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
